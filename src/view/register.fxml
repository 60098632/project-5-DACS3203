<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="ui.RegisterController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20;">

    <Label text="Register" style="-fx-font-size: 18px;" />

    <HBox spacing="5" alignment="CENTER_LEFT">
        <TextField fx:id="nameField" promptText="Full Name" />
        <Label text="ℹ">
            <tooltip>
                <Tooltip text="At least 3 letters. Letters and spaces only." />
            </tooltip>
        </Label>
    </HBox>

    <HBox spacing="5" alignment="CENTER_LEFT">
        <TextField fx:id="emailField" promptText="Email" />
        <Label text="ℹ">
            <tooltip>
                <Tooltip text="Must be a valid email format (e.g. name@example.com)" />
            </tooltip>
        </Label>
    </HBox>

    <HBox spacing="5" alignment="CENTER_LEFT">
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Label text="ℹ">
            <tooltip>
                <Tooltip text="At least 8 characters, must include a number and a special character (!@#$...)" />
            </tooltip>
        </Label>
    </HBox>

    <HBox spacing="5" alignment="CENTER_LEFT">
        <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" />
        <Label text="ℹ">
            <tooltip>
                <Tooltip text="Must exactly match your password." />
            </tooltip>
        </Label>
    </HBox>

    <Button text="Register" onAction="#handleRegister" />
    <Button text="Back to Login" onAction="#goToLogin" />

</VBox>