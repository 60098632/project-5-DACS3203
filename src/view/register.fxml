<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:controller="ui.RegisterController" xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="300">
    <children>
        <Label text="Register" layoutX="20" layoutY="20" style="-fx-font-size:18px; -fx-font-weight:bold;"/>

        <Label text="Name:" layoutX="20" layoutY="60"/>
        <TextField fx:id="nameField" layoutX="120" layoutY="55" prefWidth="220"/>

        <Label text="Email:" layoutX="20" layoutY="100"/>
        <TextField fx:id="emailField" layoutX="120" layoutY="95" prefWidth="220"/>

        <Label text="Password:" layoutX="20" layoutY="140"/>
        <PasswordField fx:id="passwordField" layoutX="120" layoutY="135" prefWidth="220"/>

        <Label text="Confirm Password:" layoutX="20" layoutY="180"/>
        <PasswordField fx:id="confirmPasswordField" layoutX="150" layoutY="175" prefWidth="190"/>

        <Label text="Role:" layoutX="20" layoutY="220"/>
        <ComboBox fx:id="roleComboBox" layoutX="120" layoutY="215" prefWidth="220" promptText="Select Role"/>

        <Button text="Register" onAction="#handleRegister" layoutX="120" layoutY="260" prefWidth="90"/>
        <Button text="Back to Login" onAction="#goToLogin" layoutX="230" layoutY="260" prefWidth="110"/>
    </children>
</AnchorPane>