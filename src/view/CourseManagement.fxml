<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ui.CourseManagementController"
      spacing="15" style="-fx-padding: 20;">

    <!-- Table of courses -->
    <Label text="All Courses:" style="-fx-font-size: 16px;"/>
    <TableView fx:id="courseTable" prefHeight="200">
        <columns>
            <TableColumn fx:id="courseCodeColumn" text="Course Code" prefWidth="100"/>
            <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="150"/>
            <TableColumn fx:id="creditHoursColumn" text="Credit Hours" prefWidth="100"/>
            <TableColumn fx:id="descriptionColumn" text="Description" prefWidth="200"/>
            <TableColumn fx:id="instructorColumn" text="Instructor" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Form to add a new course -->
    <Label text="Add New Course:" style="-fx-font-size: 16px;"/>
    <GridPane hgap="10" vgap="10">
        <columnConstraints>
            <ColumnConstraints percentWidth="20"/>
            <ColumnConstraints percentWidth="80"/>
        </columnConstraints>

        <Label text="Course Code:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="courseCodeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Course Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="courseNameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Credit Hours:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="creditHoursField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Instructor:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="instructorField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Description:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextArea fx:id="descriptionField" GridPane.rowIndex="4" GridPane.columnIndex="1" prefRowCount="3"/>
    </GridPane>

    <!-- Action buttons -->
    <HBox spacing="10">
        <Button text="Add Course" onAction="#handleAddCourse"/>
        <Button text="Delete Selected" onAction="#handleDeleteCourse"/>
        <Button text="Go Back" onAction="#handleGoBack" fx:id="goBackButton"/>
    </HBox>
</VBox>