<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="ui.TranscriptController"
      spacing="10" alignment="CENTER" prefWidth="600" prefHeight="400" style="-fx-padding:20;">
    <Label text="Transcript" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
    <TableView fx:id="transcriptTable" prefWidth="550" prefHeight="300">
        <columns>
            <TableColumn fx:id="courseCodeColumn" text="Course Code" prefWidth="100"/>
            <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="200"/>
            <TableColumn fx:id="creditHoursColumn" text="Credits" prefWidth="75"/>
            <TableColumn fx:id="gradeColumn" text="Grade" prefWidth="75"/>
        </columns>
    </TableView>
    <Label fx:id="gpaLabel" style="-fx-font-size: 14px;"/>
    <Button fx:id="backButton" text="Back" onAction="#handleBack"/>
</VBox>